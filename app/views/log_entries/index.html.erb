<header>Reviews for <%= link_to(@wine.name, @wine) %></header>
<ol id="reviews">
  <% @log_entries.each do |review| %>
    <li>
      <span class="review"><%= review.rating %> rating</span>
      <span class="user">by <%= review.name %> </span>
      <span class="date">
        <%= time_ago_in_words(review.tasted_on) %> ago
      </span>
      <p>
        &quot;<%= review.comments %>&quot;
      </p>
    </li>
  <% end %>
</ol>
<%= link_to 'Write a Review', new_wine_log_entry_path(@wine),
        remote: true,
        data: { 'update-target' => 'review_form_container' },
        class: 'btn btn-primary' %>

<div id="review_form_container"></div>